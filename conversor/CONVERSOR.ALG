algoritmo "conversor"
var
   n:inteiro
inicio
      Escreva("Informe um numero: ")
      Leia(n)
      
      se(n%2)=0 entao
      Escreval("O numero é par.")
      senao
      Escreval("E o numero é ímpar.")
      fimse
      
      se(n>=0)entao
      Escreval("O numero é positivo.")
      senao
      Escreval("E o numero é negativo.")
      fimse


fimalgoritmo